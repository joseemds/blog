---
import Title from "../components/Title.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Spacer from "../components/Spacer.astro";

const blogPosts = await getCollection("blog", ({ data }) => {
	return data.draft !== true;
});
---

<Layout title="Welcome to Astro.">
	<main>
		<Title>Hello, I'm Î»du.du</Title>
		<p class="text-center">I'm just an abstraction</p>
		<div class="flex items-center justify-center gap-4">
			<a
				href="https://github.com/joseemds"
				target="_blank"
				rel="noreferrer noopener"
			>
				<i class="ri-github-line ri-2x"></i>
			</a>
			<a
				href="https://twitter.com/joseemds"
				target="_blank"
				rel="noreferrer noopener"
			>
				<i class="ri-mastodon-line ri-2x"></i>
			</a>
			<a
				href="https://twitter.com/joseemds"
				target="_blank"
				rel="noreferrer noopener"
			>
				<i class="ri-twitter-line ri-2x"></i>
			</a>
		</div>

		<ul class="mt-16">
			{
				blogPosts.map((blogPostEntry) => (
					<li class="flex items-center justify-center flex-col">
						<a class="text-lg" href={`/posts/${blogPostEntry.slug}`}>
							{blogPostEntry.data.title}
						</a>
						<time datetime={blogPostEntry.data.publishDate.toISOString()}>
							{blogPostEntry.data.publishDate.toDateString()}
						</time>
					</li>
				))
			}
		</ul>
	</main>
</Layout>

<style>
	h3 {
		font-weight: 600;
		font-size: 2.625rem;
		text-align: center;
	}
</style>
